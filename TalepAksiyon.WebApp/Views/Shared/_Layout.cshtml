@{
  var user = session.GetUser();
}
<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Regista Master</title>
  <link rel="shortcut icon" type="image/png" href="/Modernize/Img/regista.png" />
  <link rel="stylesheet" href="/Modernize/src/assets/css/styles.min.css" />

  <link href="~/lib/dropzone-5.7.0/dist/dropzone.css" rel="stylesheet" />
  <link href="~/lib/dropzone-5.7.0/dist/basic.css" rel="stylesheet" />
  <link href="~/Modernize/sweetalert2.css" rel="stylesheet" />
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
       data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Sidebar Start -->
    <aside class="left-sidebar">
      <!-- Sidebar scroll-->
      <div>
        <div class="brand-logo d-flex align-items-center justify-content-between">
          <a asp-action="Index" asp-controller="Home" class="text-nowrap logo-img">
            <img src="/Modernize/Img/logomaster.png" width="200" alt="" />
          </a>
          <a href="javascript:void(0)"
             class="sidebartoggler ms-auto text-decoration-none fs-5 d-block d-xl-none">
            <i class="ti ti-x"></i>
          </a>
          <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
            <i class="ti ti-x fs-8"></i>
          </div>
        </div>
        <!-- Sidebar navigation-->


        <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
          <ul id="sidebarnav">
            <li class="sidebar-item">
              <a class="sidebar-link" asp-action="Index" asp-controller="Home" aria-expanded="false">
                <span>
                  <i class="ti ti-home"></i>
                </span>
                <span class="hide-menu">Ana Sayfa</span>
              </a>
            </li>
            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">Proje Yönetİmİ</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-action="Index" asp-controller="Project" aria-expanded="false">
                <span>
                  <i class="ti ti-article"></i>
                </span>
                <span class="hide-menu">Projeler</span>
              </a>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-action="Index" asp-controller="ProjectNote" aria-expanded="false">
                <span>
                  <i class="ti ti-checklist"></i>
                </span>
                <span class="hide-menu">Proje Notları</span>
              </a>
            </li>

            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">Müşteri Yönetİmİ</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-action="Index" asp-controller="Customer" aria-expanded="false">
                <span>
                  <i class="ti ti-users"></i>
                </span>
                <span class="hide-menu">Müşteriler</span>
              </a>
            </li>

            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">Talep Yönetİmİ</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-action="Index" asp-controller="Request" aria-expanded="false">
                <span>
                  <i class="ti  ti-writing"></i>
                </span>
                <span class="hide-menu">Talepler</span>
              </a>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-action="Index" asp-controller="Action" aria-expanded="false">
                <span>
                  <i class="ti  ti-edit"></i>
                </span>
                <span class="hide-menu">Aksiyonlar</span>
              </a>
            </li>

            @*<li class="nav-small-cap">
            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
            <span class="hide-menu">Görev Yönetimi</span>
            </li>
            <li class="sidebar-item">
            <a class="sidebar-link" asp-action="Index" asp-controller="Task" aria-expanded="false">
            <span>
            <i class="ti ti-clipboard-text"></i>
            </span>
            <span class="hide-menu">Görevler</span>
            </a>
            </li>
            *@
            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">Tanımlar</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-action="Index" asp-controller="Defination" aria-expanded="false">
                <span>
                  <i class="ti ti-clipboard-text"></i>
                </span>
                <span class="hide-menu">Proje Tanımları</span>
              </a>
            </li>

            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">Admin</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-action="Index" asp-controller="User" aria-expanded="false">
                <span>
                  <i class="ti ti-user-circle"></i>
                </span>
                <span class="hide-menu">Kullanıcılar</span>
              </a>
            </li>

          </ul>
        </nav>



        <!-- End Sidebar navigation -->
      </div>
      <!-- End Sidebar scroll-->
    </aside>
    <!--  Sidebar End -->
    <!--  Main wrapper -->
    <div class="body-wrapper">
      <!--  Header Start -->
      <header class="app-header">
        <nav class="navbar navbar-expand-lg navbar-light">
          <ul class="navbar-nav">
            <li class="nav-item d-block d-xl-none">
              <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                <i class="ti ti-menu-2"></i>
              </a>
            </li>

          </ul>
          <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
            <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">

              <li class="nav-item dropdown">
                <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                   aria-expanded="false">
                  <span class="mr-1">
                    Merhaba,<span class="user-name text-bold-700" style="padding: 10px">@user.Name @user.Surname</span>
                  </span>

                  <span class="avatar avatar-online">
                    <img style="height:37px; border-radius:50%; width:37px;" src='@((user.Image!=null)?"/Modernize/Img/ProfilePhotos/"+user.Image:"/Modernize/src/assets/images/profile/user-1.jpg")' alt="avatar">
                    <i></i>
                  </span>


                </a>

                @*     <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                aria-expanded="false">
                <span class="mr-1">Merhaba,<span class="user-name text-bold-700">@user.Name @user.Surname</span></span>  <span class="avatar avatar-online"><img style="height:37px;  border-radius:50%; width:37px;" src='@((user.Image!=null)?"/Modernize/Img/ProfilePhotos/"+user.Image:"/Modernize/src/assets/images/profile/user-1.jpg")' alt="avatar"><i></i></span>
                </a>*@

                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                  <div class="message-body">
                    <a asp-action="UserDetail" asp-controller="User" class="d-flex align-items-center gap-2 dropdown-item">
                      <i class="ti ti-user fs-6"></i>
                      <p class="mb-0 fs-3">Profilim</p>
                    </a>
                    @* <a asp-action="MyTask" asp-controller="Task" class="d-flex align-items-center gap-2 dropdown-item">
                    <i class="ti ti-list-check fs-6"></i>
                    <p class="mb-0 fs-3">Görevler</p>
                    </a>*@
                    <a asp-action="Logout" asp-controller="Security" class="btn btn-outline-primary mx-3 mt-2 d-block">Çıkış Yap</a>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </nav>



      </header>
      <!--  Header End -->
      @RenderBody()

    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="/Modernize/DevextremeJs/js/jquery.min.js"></script>
  <script src="/Modernize/src/assets/libs/jquery/dist/jquery.min.js"></script>

  <script src="/Modernize/DevextremeJs/js/dx.all.js"></script>
  <script src="/Modernize/DevextremeJs/js/dx.aspnet.mvc.js"></script>
  <script src="/Modernize/DevextremeJs/js/dx.aspnet.data.js"></script>


  <script src="/Modernize/DevextremeJs/js/cldr.js"></script>
  <script src="/Modernize/DevextremeJs/js/cldr/event.js"></script>
  <script src="/Modernize/DevextremeJs/js/cldr/supplemental.js"></script>
  <script src="/Modernize/DevextremeJs/js/cldr/unresolved.js"></script>


  <script src="/Modernize/DevextremeJs/js/globalize.js"></script>

  <script src="/Modernize/DevextremeJs/js/globalize/message.js"></script>

  <script src="/Modernize/DevextremeJs/js/globalize/number.js"></script>
  <script src="/Modernize/DevextremeJs/js/globalize/currency.js"></script>
  <script src="/Modernize/DevextremeJs/js/globalize/date.js"></script>


  <script src="/Modernize/DevextremeJs/js/localization/dx.messages.tr.js"></script>
  <script src="/Modernize/DevextremeJs/js/localization/dx.messages.en.js"></script>

  <script src="/Modernize/sweetalert.min.js"></script>
  <script src="/Modernize/sweetalert2.min.js"></script>
  <script src="/lib/toastr-2.1.4/build/toastr.min.js"></script>

  <script src="/Modernize/src/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/Modernize/src/assets/js/sidebarmenu.js"></script>
  <script src="/Modernize/src/assets/js/app.min.js"></script>
  <script src="/Modernize/src/assets/libs/simplebar/dist/simplebar.js"></script>
  <script src="/Modernize/src/assets/js/dashboard.js"></script>

  <script src="~/lib/dropzone-5.7.0/dist/dropzone.js"></script>
  <script type="text/javascript">
    Dropzone.autoDiscover = false;
  </script>

  @RenderSection("Scripts", required: false)


</body>

</html>